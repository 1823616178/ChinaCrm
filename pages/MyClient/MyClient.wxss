/* pages/MyClient/MyClient.wxss */

.contarion {
  height: 100px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  margin-left: 10px;
}

.CardStyle {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  border-radius: 30px;
  height: 100%;
  width: 70%;
  background: linear-gradient(#939394, #0a76a4);
  box-shadow: 0 0 0 1px hsla(0, 0%, 100%, 0.3) inset, 0 0.5em 1em rgba(0, 0, 0, 0.6);
  text-shadow: 0 1px 1px hsla(0, 0%, 100%, 0.3);
  font-family: "Microsoft YaHei UI";
  color: rgb(84, 187, 36);
}

.Containimage {
  position: relative;
  height: 100px;
  width: 100px;
  border-radius: 80px;
  box-shadow: 0 0 0 1px hsla(0, 0%, 100%, 0.3) inset, 0 0.5em 1em rgba(0, 0, 0, 0.6);
  text-shadow: 0 1px 1px hsla(0, 0%, 100%, 0.3);
  font-family: "Microsoft YaHei UI";
  color: rgb(84, 187, 36);
}
